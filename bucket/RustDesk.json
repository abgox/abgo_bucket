    "license": {
        "identifier": "GNU Affero General Public License v3.0",
        "url": "https://github.com/rustdesk/rustdesk/blob/master/LICENCE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/rustdesk/rustdesk/releases/download/1.2.3/rustdesk-1.2.3-x86_64.exe",
            "hash": "23b661d7bc171cd500d5096456905283ffe06479582b62d3bd5066633935d43e"
        },
        "32bit": {
            "url": "https://github.com/rustdesk/rustdesk/releases/download/1.2.3/rustdesk-1.2.3-x86-sciter.exe",
            "hash": "2eb3e2d3cc81cbdddf9f5ff6772a0e495f22a10003aeefb20f552b6873a23c1c"
        }
    },
    "bin": [
        [
            "RustDesk.exe",
            "RustDesk"
        ]
    ],
    "shortcuts": [
        [
            "RustDesk.exe",
            "RustDesk"
        ]
    ],
    "pre_install": "Get-ChildItem \"$dir\" 'rustdesk-*.exe' | Rename-Item -NewName 'RustDesk.exe'",
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "persist -dir @(\"$env:AppData\\RustDesk\") @(\"$persist_dir\")"
    ],
    "pre_uninstall": [
        "$_bucket=(scoop bucket list | where-Object {$_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$_bucket\\bin\\utils.ps1\"",
        "stop_process"
    ],
    "post_uninstall": [
        "$_bucket=(scoop bucket list | where-Object {$_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$_bucket\\bin\\utils.ps1\"",
        "$data=@(\"$env:AppData\\RustDesk\",\"$env:LocalAppData\\rustdesk\")",
        "$data | ForEach-Object {",
        "   if (Test-Path($_)) {",
        "       Remove-Item -Force -Recurse $_",
        "       Write-Host \"Removing $_\" -f Yellow",
        "   }",
        "}"
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/rustdesk/rustdesk/releases/download/$version/rustdesk-$version-x86_64.exe"
            },
            "32bit": {
                "url": "https://github.com/rustdesk/rustdesk/releases/download/$version/rustdesk-$version-x86-sciter.exe"
            }
        }
    }
}
