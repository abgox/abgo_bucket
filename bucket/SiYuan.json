        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$user_AppData\\SiYuan\",\"$user_AppData\\SiYuan-Electron\")",
        "$ui_exe=\"$dir\\Uninstall SiYuan.exe\"",
        "try{ & $ui_exe /S }catch{}",
