{
    "version": "7.14.5",
    "description": "无缝衔接的团队工作工具。Essential Work Tools, Seamless Connection",
    "homepage": "https://github.com/microsoft/winget-pkgs/tree/master/manifests/b/ByteDance/Lark",
    "license": "Unknown",
    "url": "https://sf16-va.larksuitecdn.com/obj/lark-artifact-storage/ad77b192/Lark-win32_ia32-7.14.5-signed.exe#/dl.7z",
    "hash": "c603cb8fd4383576fb21e2dbf62f5795bbeaf2e87e0efcf50b140bde7e5a5783",
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Lark.exe",
            "Lark"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "persist -dir @(\"$user_AppData\\LarkInternational\") @(\"$persist_dir\\LarkInternational\")",
        "create_app_lnk \"$dir\\app\\Lark.exe\" \"$desktop\\Lark.lnk\""
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process",
        "remove_files @(\"$desktop\\Lark.lnk\",\"$user_AppData\\LarkInternational\",\"$user_LocalAppData\\Lark\")"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$dl_info = get_installer_info 'ByteDance/Lark'",
            "\"ver:$($dl_info.PackageVersion);\"",
            "\"x86:$($dl_info.x86_exe.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>.+?); x86:(?<x86>.+?);"
    },
    "autoupdate": {
        "url": "$matchX86#/dl.7z",
        "hash": {
            "url": "https://raw.githubusercontent.com/microsoft/winget-pkgs/master/manifests/b/ByteDance/Lark/$version/ByteDance.Lark.installer.yaml",
            "regex": "Architecture: x86[\\s\\S]+?InstallerSha256:\\s?(.+)"
        }
    }
}
