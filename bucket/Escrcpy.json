{
    "version": "1.18.3",
    "description": "使用图形化的 Scrcpy 显示和控制您的 Android 设备，由 Electron 驱动。Graphical Scrcpy to display and control Android, devices powered by Electron.",
    "homepage": "https://github.com/viarotel-org/escrcpy",
    "license": {
        "identifier": "Apache License 2.0",
        "url": "https://github.com/viarotel-org/escrcpy/blob/main/LICENSE"
    },
    "url": "https://github.com/viarotel-org/escrcpy/releases/download/v1.18.3/Escrcpy-1.18.3-win-setup.exe#/_installer_.exe",
    "hash": "sha512:15da42b04af74b1aef8be3f0be224d08c81f9a99a9d4ac24293cfb5a1f1f90ce58e2a20463842f1354cac6bf7f8d92a09d8c89f0e16bb12e0016a1474f974018",
    "shortcuts": [
        [
            "Escrcpy.exe",
            "Escrcpy"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\_installer_.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\Escrcpy.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$user_AppData\\escrcpy\") @(\"$persist_dir\\escrcpy\")",
        "clean_redundant_files @($path_exe,\"$apps_lnk\\Escrcpy.lnk\")",
        "remove_app_lnk @(\"Escrcpy.lnk\")"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$user_AppData\\escrcpy\")",
        "$ui_exe=\"$dir\\Uninstall Escrcpy.exe\"",
        "try{ & $ui_exe /S }catch{}",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$user_LocalAppData\\escrcpy-updater\")"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/viarotel-org/escrcpy/releases/download/v$version/Escrcpy-$version-win-setup.exe#/_installer_.exe",
        "hash": {
            "url": "$baseurl/latest.yml",
            "regex": "sha512:\\s+$base64"
        }
    }
}
