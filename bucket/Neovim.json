{
    "$schema": "https://abgox.github.io/ScoopType/schema/zh-CN-min.json",
    "version": "0.9.5",
    "description": "A project that seeks to aggressively refactor Vim. 一个旨在重构 Vim 的项目",
    "homepage": "https://neovim.io/",
    "license": {
        "identifier": "Apache License 2.0,Vim",
        "url": "https://github.com/neovim/neovim/blob/master/LICENSE.txt"
    },
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "url": "https://github.com/neovim/neovim/releases/download/v0.9.5/nvim-win64.zip",
    "hash": "de6dc1f0edb45f5f225ee24ce80a4fcbc3a337932037e98ae143975fca2556bf",
    "extract_dir": "nvim-win64",
    "bin": [
        "bin\\nvim.exe",
        "bin\\nvim-qt.exe"
    ],
    "shortcuts": [
        [
            "bin\\nvim-qt.exe",
            "Neovim"
        ]
    ],
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "persist -dir @(\"$env:LocalAppData\\nvim\",\"$env:LocalAppData\\nvim-data\") @(\"$persist_dir\\nvim\",\"$persist_dir\\nvim-data\")"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process"
    ],
    "post_uninstall": [
        "$data=@(\"$env:LocalAppData\\nvim\",\"$env:LocalAppData\\nvim-data\")",
        "$data | ForEach-Object {",
        "   if (Test-Path($_)) {",
        "       Remove-Item -Force -Recurse $_",
        "       Write-Host \"Removing $_\" -f Yellow",
        "   }",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/neovim/neovim"
    },
    "autoupdate": {
        "url": "https://github.com/neovim/neovim/releases/download/v$version/nvim-win64.zip",
        "hash": {
            "url": "$url.sha256sum"
        }
    }
}
