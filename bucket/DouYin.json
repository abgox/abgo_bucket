{
    "version": "3.9.0",
    "description": "抖音，一个短视频平台。",
    "homepage": "https://www.douyin.com/",
    "license": "Unknown",
    "url": "https://www.douyin.com/download/pc/obj/douyin-pc-client/7044145585217083655/releases/11867354/3.9.0/win32-ia32/douyin-v3.9.0-win32-ia32-douyin.exe#/abgo_bucket_installer.exe",
    "hash": "af4ed8fed23f35b1acdf705e3b8bf5a6ffa3e814659f549cb56242d934107975",
    "pre_install": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_installer=\"$dir\\abgo_bucket_installer.exe\"",
        "& $path_installer /S /D=$dir",
        "$core_exe=\"C:\\Program Files (x86)\\ByteDance\\douyin\\douyin_launcher.exe\"",
        "sleep_install $core_exe",
        "persist_file -dir @(\"$user_AppData\\douyin\",\"$user_AppData\\douyin_widget\") @(\"$persist_dir\\douyin\",\"$persist_dir\\douyin_widget\")",
        "if(!(scoop config abgo_bucket_no_shortcut)){",
        "   create_app_lnk \"C:\\Program Files (x86)\\ByteDance\\douyin\\douyin_launcher.exe\" \"$desktop\\抖音.lnk\"",
        "}",
        "create_app_lnk \"C:\\Program Files (x86)\\ByteDance\\douyin\\douyin_launcher.exe\" \"$scoop_apps_lnk\\抖音.lnk\"",
        "do_some_things"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$user_AppData\\douyin\",\"$user_AppData\\douyin_widget\")",
        "$ui_exe=\"C:\\Program Files (x86)\\ByteDance\\douyin\\uninst.exe\"",
        "try{ & $ui_exe /S }catch{}",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$desktop\\抖音.lnk\",\"$scoop_apps_lnk\\抖音.lnk\",\"$user_LocalAppData\\app_shell_cache_6383\")"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$dl_info = get_installer_info 'ByteDance/Douyin'",
            "\"ver:$($dl_info.PackageVersion);\"",
            "\"x86:$($dl_info.x86_exe.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>.+?); x86:(?<x86>.+?);"
    },
    "autoupdate": {
        "url": "$matchX86#/abgo_bucket_installer.exe",
        "hash": {
            "url": "https://raw.githubusercontent.com/microsoft/winget-pkgs/master/manifests/b/ByteDance/Douyin/$version/ByteDance.Douyin.installer.yaml",
            "regex": "Architecture: x86[\\s\\S]+?InstallerSha256:\\s?(.+)"
        }
    }
}
