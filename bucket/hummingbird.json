    },
    "url": "https://github.com/leibnizli/hummingbird/releases/download/v5.0.0/hummingbird-Setup-5.0.0.exe#/_installer_.exe",
    "hash": "sha512:1073247d3822083ec3184d578cf0c3d502a36c09559921ca0b991e5e45b56c7af12a85a0aec6371cba6cf5f09738cea4c83f6a3fe7f30ead8cbedba600dba43f",
    "shortcuts": [
        [
            "hummingbird.exe",
            "hummingbird"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\_installer_.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\hummingbird.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$user_AppData\\hummingbird\") @(\"$persist_dir\\hummingbird\")",
        "clean_redundant_files @($path_exe,\"$apps_lnk\\hummingbird.lnk\")",
        "remove_app_lnk @(\"hummingbird.lnk\")"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$user_AppData\\hummingbird\")",
        "$ui_exe=\"$dir\\Uninstall hummingbird.exe\"",
        "try{ & $ui_exe /S }catch{}",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$user_LocalAppData\\hummingbird-updater\")"
    ],
    "checkver": {
        "github": "https://github.com/leibnizli/hummingbird"
    },
    "autoupdate": {
        "url": "https://github.com/leibnizli/hummingbird/releases/download/v$version/hummingbird-Setup-$version.exe#/_installer_.exe",
        "hash": {
            "url": "$baseurl/latest.yml",
            "regex": "sha512:\\s+$base64"
        }
    }
}
