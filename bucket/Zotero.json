{
    "version": "6.0.35",
    "description": "Open-source reference management software to manage bibliographic data and related research materials.",
    "homepage": "https://www.zotero.org/",
    "license": "AGPL-3.0-only",
    "url": "https://download.zotero.org/client/release/6.0.35/Zotero-6.0.35_setup.exe",
    "hash": "c059309fcc346e6bdf99353611b64f2414f5a031470eab89642fd001e2c8b99f",
    "shortcuts": [
        [
            "Zotero.exe",
            "Zotero"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\Zotero-$($version)_setup.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\Zotero.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$user_AppData\\Zotero\") @(\"$persist_dir\\Zotero\")",
        "clean_redundant_files @($path_exe,\"$admin_apps_lnk\\Zotero.lnk\")",
        "remove_app_lnk @(\"Zotero.lnk\")"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$user_AppData\\Zotero\")",
        "$ui_exe=\"$dir\\uninstall\\helper.exe\"",
        "try{ & $ui_exe /S }catch{}",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$user_LocalAppData\\Zotero\")"
    ],
    "checkver": {
        "url": "https://www.zotero.org/download/client/update/5.0.0/_/WINNT_x86-msvc/en-US/release/_/update.xml",
        "xpath": "/updates/update/@appVersion"
    },
    "autoupdate": {
        "url": "https://download.zotero.org/client/release/$version/Zotero-$version_setup.exe"
    }
}
