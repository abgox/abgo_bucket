{
    "version": "2.8.5",
    "homepage": "https://www.snipaste.com/",
    "description": "A snipping tool, which allows you to pin the screenshot back onto the screen. 一个剪切工具，可以让你把截图固定在屏幕上",
    "license": "Unknown",
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.8.5-Beta-x64.zip",
            "hash": "c2ac49fc590493ef55b4967059ccae3c7d3b5037d768bd4d1fc9f821cc916659"
        },
        "32bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.8.5-Beta-x86.zip"
        }
    },
    "bin": "Snipaste.exe",
    "shortcuts": [
        [
            "Snipaste.exe",
            "Snipaste2"
        ]
    ],
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$p1=\"$persist_dir\\config.ini\"",
        "if (!(Test-Path $p1)) { New-Item $p1 > $null }",
        "Write-Host \"--------------------- $($json.persist_data[0])\" -f Yellow",
        "Write-Host \"$($json.persist_data[3]) -- $($dir + \"\\chfs.ini\")\" -f Green",
        "Write-Host \"$($json.persist_data[4]) -- $p1\" -f Green",
        "Write-Host \"---------------------`n\" -f Yellow",
        "echo \"[General]`nconfig=$($persist_dir.Replace('\\','/'))/config.ini\" > \"$dir\\config.ini\"",
        "explorer \"$dir\\Snipaste.exe\""
    ],
    "pre_uninstall": [
        "$_bucket=(scoop bucket list | where-Object {$_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$_bucket\\bin\\utils.ps1\"",
        "stop_process"
    ]
}
