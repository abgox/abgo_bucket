{
    "version": "115.12.1",
    "description": "一款易于设置和定制的免费电子邮件应用程序。A free email application that’s easy to set up and customize.",
    "homepage": "https://www.thunderbird.net",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.mozilla.org/zh-CN/foundation/licensing/"
    },
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/115.12.1/win64/zh-CN/Thunderbird%20Setup%20115.12.1.exe#/abgo_bucket_installer.exe",
            "hash": "sha512:5e68ef4df322c2e910d69e8505f186db1421fd6146e22386edb256dc97bef05787ce36e7a749309ee7f53903c2520d24886a180f70561ab267302946c919319f"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/115.12.1/win32/zh-CN/Thunderbird%20Setup%20115.12.1.exe#/abgo_bucket_installer.exe",
            "hash": "sha512:4d4a6ba5dbc928831ae07ae364623610e5fd8d8c77cde1e30231af214a589be28f256f0cf3504930ec0903495be60c7ed65d96d0547193cb77d2cf77f7f0b02d"
        }
    },
    "bin": "thunderbird.exe",
    "shortcuts": [
        [
            "thunderbird.exe",
            "Thunderbird"
        ],
        [
            "thunderbird.exe",
            "Thunderbird Profile Manager",
            "-P"
        ]
    ],
    "pre_install": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_installer=\"$dir\\abgo_bucket_installer.exe\"",
        "& $path_installer /S /D=$dir",
        "$core_exe=\"$dir\\thunderbird.exe\"",
        "sleep_install $core_exe",
        "persist_file -dir @(\"$user_AppData\\Thunderbird\",\"$user_LocalAppData\\Thunderbird\") @(\"$persist_dir\\Thunderbird\",\"$persist_dir\\Thunderbird_LocalAppData\")",
        "handle_app_lnk",
        "do_some_things"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$user_AppData\\Thunderbird\",\"$user_LocalAppData\\Thunderbird\")",
        "$ui_exe=\"$dir\\uninstall\\helper.exe\"",
        "& $ui_exe /S",
        "sleep_uninstall $ui_exe"
    ],
    "checkver": {
        "url": "https://www.thunderbird.net/thunderbird/all/",
        "regex": "thunderbird/([\\d.]+)/"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/win64/zh-CN/Thunderbird%20Setup%20$version.exe#/abgo_bucket_installer.exe",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/zh-CN/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/win32/zh-CN/Thunderbird%20Setup%20$version.exe#/abgo_bucket_installer.exe",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/zh-CN/$basename"
                }
            }
        }
    }
}
