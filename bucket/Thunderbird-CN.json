{
    "version": "115.11.0",
    "description": "一款易于设置和定制的免费电子邮件应用程序。A free email application that’s easy to set up and customize.",
    "homepage": "https://www.thunderbird.net",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.mozilla.org/zh-CN/foundation/licensing/"
    },
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/115.11.0/win64/zh-CN/Thunderbird%20Setup%20115.11.0.exe#/_installer_.exe",
            "hash": "sha512:b336398c4f31fa17a4b3faf883698f6d6f888c188a3ce58b9560be448d7d6d488cdae0a11114e767205c0c5a40b8cbaca3615653f71defeb1431138c4257bb06"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/115.11.0/win32/zh-CN/Thunderbird%20Setup%20115.11.0.exe#/_installer_.exe",
            "hash": "sha512:33ae262482b407ebbc577c1db4e15b3c50e0017e893394df3eca58db73b993d4e792bd7b7e36cd66ba03f44047048869f650eaebc681f20181293217b8ee923f"
        }
    },
    "bin": "thunderbird.exe",
    "shortcuts": [
        [
            "thunderbird.exe",
            "Thunderbird"
        ],
        [
            "thunderbird.exe",
            "Thunderbird Profile Manager",
            "-P"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\_installer_.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\thunderbird.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$user_AppData\\Thunderbird\",\"$user_LocalAppData\\Thunderbird\") @(\"$persist_dir\\Thunderbird\",\"$persist_dir\\Thunderbird_LocalAppData\")",
        "clean_redundant_files @($path_exe)",
        "remove_app_lnk @(\"Thunderbird.lnk\")"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$user_AppData\\Thunderbird\",\"$user_LocalAppData\\Thunderbird\")",
        "$ui_exe=\"$dir\\uninstall\\helper.exe\"",
        "& $ui_exe /S",
        "sleep_uninstall $ui_exe"
    ],
    "checkver": {
        "url": "https://www.thunderbird.net/thunderbird/all/",
        "regex": "thunderbird/([\\d.]+)/"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/win64/zh-CN/Thunderbird%20Setup%20$version.exe#/_installer_.exe",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/zh-CN/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/win32/zh-CN/Thunderbird%20Setup%20$version.exe#/_installer_.exe",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/zh-CN/$basename"
                }
            }
        }
    }
}
