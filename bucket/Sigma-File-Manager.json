    "hash": "418285100afe0b9a2624740b94f1fa7d483bd24d88327fb99d930aef26805a3f",
    "shortcuts": [
        [
            "Sigma file manager.exe",
            "Sigma file manager"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\Sigma-File-Manager-$($version)-Windows-Setup.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\Sigma file manager.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$env:AppData\\Sigma file manager\",\"$env:UserProfile\\.sigma-file-manager\") @(\"$persist_dir\\Sigma file manager\",\"$persist_dir\\.sigma-file-manager\")",
        "clean_redundant_files @($path_exe,\"$apps_lnk\\Sigma file manager.lnk\") 15"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$env:AppData\\Sigma file manager\",\"$env:UserProfile\\.sigma-file-manager\")",
        "$ui_exe=\"$dir\\Uninstall Sigma file manager.exe\"",
        "try{ & $ui_exe /S }catch{}",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$env:LocalAppData\\sigma-file-manager-updater\")"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/aleksey-hoffman/sigma-file-manager/releases/download/v$version/Sigma-File-Manager-$version-Windows-Setup.exe"
    }
}
