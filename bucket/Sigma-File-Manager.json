    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "& \"$dir\\Sigma-File-Manager-$version-Windows-Setup.exe\" /S /D=$dir",
        "persist -dir @(\"$env:AppData\\Sigma file manager\") @(\"$persist_dir\")",
        "create_app_lnk \"$dir\\Sigma file manager.exe\" \"$desktop\\Sigma file manager.lnk\"",
        "create_app_lnk \"$dir\\Sigma file manager.exe\" \"$scoop_apps_lnk\\Sigma file manager.lnk\"",
        "clean_redundant_files @(\"$dir\\Sigma-File-Manager-$version-Windows-Setup.exe\",\"$apps_lnk\\Sigma file manager.lnk\") 10"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process",
        "remove_files @(\"$desktop\\Sigma file manager.lnk\",\"$scoop_apps_lnk\\Sigma file manager.lnk\",\"$env:AppData\\Sigma file manager\",\"$env:LocalAppData\\sigma-file-manager-updater\")"
