    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe= \"$dir\\_installer_.exe\"",
        "& $path_exe /S /D=$dir",
        "persist -dir @(\"$env:AppData\\obsidian\",\"$env:UserProfile\\Documents\\Obsidian Vault\") @(\"$persist_dir\\obsidian\",\"$persist_dir\\obsidian\\Obsidian Vault\")",
        "create_app_lnk \"$dir\\Obsidian.exe\" \"$scoop_apps_lnk\\Obsidian.lnk\"",
        "clean_redundant_files @(\"$apps_lnk\\Obsidian.lnk\",$path_exe) 10"
    ],
    "pre_uninstall": [
        "$ErrorActionPreference=\"SilentlyContinue\"",
        "& \"$dir\\Uninstall Obsidian.exe\" /S",
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process",
        "remove_files @(\"$desktop\\Obsidian.lnk\",\"$scoop_apps_lnk\\Obsidian.lnk\",\"$env:UserProfile\\Documents\\Obsidian Vault\",\"$env:AppData\\obsidian\",\"$env:LocalAppData\\obsidian-updater\")"
    ],
    "checkver": {
        "github": "https://github.com/obsidianmd/obsidian-releases"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/obsidianmd/obsidian-releases/releases/download/v$version/Obsidian.$version.exe#/_installer_.exe"
            },
            "32bit": {
                "url": "https://github.com/obsidianmd/obsidian-releases/releases/download/v$version/Obsidian.$version-32.exe#/_installer_.exe"
            },
            "arm64": {
                "url": "https://github.com/obsidianmd/obsidian-releases/releases/download/v$version/Obsidian.$version-arm64.exe#/_installer_.exe"
            }
        }
    }
