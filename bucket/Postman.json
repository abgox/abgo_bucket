{
    "version": "10.22.0",
    "description": "一个完整的API开发环境。Complete API development environment.",
    "homepage": "https://www.getpostman.com/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.getpostman.com/licenses/postman_eula"
    },
    "url": "https://dl.pstmn.io/download/10.22.0/Postman-win64-10.22.0-Setup.exe#/dl.7z",
    "hash": "sha1:554fe6124cc01b68f136f3d447da91269887e62c",
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Expand-7zipArchive \"$dir\\Postman-$($version)-full.nupkg\" \"$dir\" -ExtractDir 'lib\\net45' -Removal",
        "persist -dir @(\"$env:AppData\\Postman\",\"$env:UserProfile\\Postman\") @(\"$persist_dir\\Postman\",\"$persist_dir\\Postman_User\")",
        "create_app_lnk \"$dir\\Postman.exe\" \"$desktop\\Postman.lnk\"",
        "create_app_lnk \"$dir\\Postman.exe\" \"$scoop_apps_lnk\\Postman.lnk\""
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process",
        "remove_files @(\"$desktop\\Postman.lnk\",\"$scoop_apps_lnk\\Postman.lnk\",\"$env:AppData\\Postman\",\"$env:UserProfile\\Postman\")"
    ],
    "checkver": {
        "url": "https://dl.pstmn.io/changelog?channel=stable&platform=win64",
        "jsonpath": "$.changelog[0].name"
    },
    "autoupdate": {
        "url": "https://dl.pstmn.io/download/$version/Postman-win64-$version-Setup.exe#/dl.7z",
        "hash": {
            "url": "https://dl.pstmn.io/RELEASES?platform=win64&from=$version",
            "regex": "(?sm)$basename.*?$sha1"
        }
    }
}
