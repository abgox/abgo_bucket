    "description": "An electron-based music player. 一个基于 electron 的音乐软件",
    "license": "Apache-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/lyswhut/lx-music-desktop/releases/download/v2.5.0/lx-music-desktop-v2.5.0-win_x64-green.7z",
            "hash": "49d6c449718dad540add3134442c3e9e8d02f5c9a7cb12951aa60fe08505d621"
        }
    },
    "shortcuts": [
        [
            "lx-music-desktop.exe",
            "lx-music"
        ]
    ],
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$data=@(\"$env:APPData\\lx-music-desktop\\LxDatas\")",
        "$persist=@(\"$persist_dir\\LxDatas\")",
        "persist -dir $data $persist"
    ],
    "pre_uninstall": [
        "$_bucket=(scoop bucket list | where-Object {$_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$_bucket\\bin\\utils.ps1\"",
        "stop_process"
    ],
    "post_uninstall": [
        "$data=@(\"$env:APPData\\lx-music-desktop\")",
        "$data | ForEach-Object {",
        "   if (Test-Path($_)) {",
        "       Remove-Item -Force -Recurse $_",
        "       Write-Host \"Removing $_\" -f Yellow",
        "   }",
        "}"
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/lyswhut/lx-music-desktop/releases/download/v$version/lx-music-desktop-v$version-win_x64-green.7z"
            }
        }
    }
}
