{
    "$schema": "https://abgox.github.io/ScoopType/schema/zh-CN-min.json",
    "version": "2.5.0",
    "description": "An electron-based music player. 一个基于 electron 的音乐软件",
    "homepage": "https://github.com/lyswhut/lx-music-desktop",
    "license": {
        "identifier": "Apache License 2.0",
        "url": "https://github.com/lyswhut/lx-music-desktop/blob/master/LICENSE"
    },
    "url": "https://github.com/lyswhut/lx-music-desktop/releases/download/v2.5.0/lx-music-desktop-v2.5.0-win_x64-green.7z",
    "hash": "49d6c449718dad540add3134442c3e9e8d02f5c9a7cb12951aa60fe08505d621",
    "shortcuts": [
        [
            "lx-music-desktop.exe",
            "lx-music"
        ]
    ],
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "persist -dir @(\"$env:AppData\\lx-music-desktop\") @(\"$persist_dir\")"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process"
    ],
    "post_uninstall": [
        "$data=@(\"$env:AppData\\lx-music-desktop\")",
        "$data | ForEach-Object {",
        "   if (Test-Path($_)) {",
        "       Remove-Item -Force -Recurse $_",
        "       Write-Host \"Removing $_\" -f Yellow",
        "   }",
        "}"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/lyswhut/lx-music-desktop/releases/download/v$version/lx-music-desktop-v$version-win_x64-green.7z"
    }
}
