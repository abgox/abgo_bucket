    "shortcuts": [
        [
            "Hydrogen Music.exe",
            "Hydrogen Music"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\_installer_.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\Hydrogen Music.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$env:AppData\\hydrogenmusic\") @(\"$persist_dir\\hydrogenmusic\")",
        "clean_redundant_files @($path_exe,\"$apps_lnk\\Hydrogen Music.lnk\") 15"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$env:AppData\\hydrogenmusic\")",
        "$ui_exe=\"$dir\\Uninstall Hydrogen Music.exe\"",
        "try{ & $ui_exe /S }catch{}",
        "sleep_uninstall $ui_exe"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/Kaidesuyo/Hydrogen-Music/releases/download/v$version/Hydrogen-Music-Setup-$version.exe#/_installer_.exe"
    }
