    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\_installer_.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\pot.exe\"",
        "sleep_install $core_exe",
        "persist -file @(\"$env:AppData\\com.pot-app.desktop\\config.json\") @(\"$persist_dir\\com.pot-app.desktop\\config.json\")",
        "if(Test-Path \"$persist_dir\\com.pot-app.desktop\\plugins\"){",
        "   Copy-Item \"$persist_dir\\com.pot-app.desktop\\plugins\" \"$env:AppData\\com.pot-app.desktop\" -Force -Recurse",
        "}elseif(Test-Path \"$env:AppData\\com.pot-app.desktop\\plugins\"){",
        "   Copy-Item \"$env:AppData\\com.pot-app.desktop\\plugins\"  \"$persist_dir\\com.pot-app.desktop\"-Force -Recurse",
        "}",
        "create_app_lnk $core_exe \"$scoop_apps_lnk\\pot.lnk\"",
        "clean_redundant_files @($path_exe,\"C:\\ProgramData\\Microsoft\\Windows\\Start Menu\\Programs\\pot\\pot.lnk\") 15"
    ],
    "pre_uninstall": [
        "Copy-Item \"$env:AppData\\com.pot-app.desktop\\plugins\" \"$persist_dir\\com.pot-app.desktop\" -Force -Recurse",
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "$ui_exe=\"$dir\\uninstall.exe\"",
        "& $ui_exe /S",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"C:\\Users\\Public\\Desktop\\pot.lnk\",\"$scoop_apps_lnk\\pot.lnk\",\"$env:AppData\\com.pot-app.desktop\",\"$env:LocalAppData\\com.pot-app.desktop\")"
    ],
    "checkver": {
        "github": "https://github.com/pot-app/pot-desktop"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/pot-app/pot-desktop/releases/download/$version/pot_$version_x64-setup.exe#/_installer_.exe"
            },
            "32bit": {
                "url": "https://github.com/pot-app/pot-desktop/releases/download/$version/pot_$version_x86-setup.exe#/_installer_.exe"
            },
            "arm64": {
                "url": "https://github.com/pot-app/pot-desktop/releases/download/$version/pot_$version_arm64-setup.exe#/_installer_.exe"
            }
        }
    }
