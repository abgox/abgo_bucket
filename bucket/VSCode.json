            "hash": "16b881a74711921f87b172009e96836a011b56a3b332857fb1979e11034e993c"
        }
    },
    "env_add_path": "bin",
    "shortcuts": [
        [
            "code.exe",
            "Visual Studio Code"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "persist -dir @(\"$user_AppData\\Code\",\"$env:UserProfile\\.vscode\") @(\"$persist_dir\\Code\",\"$persist_dir\\.vscode\")",
        "create_app_lnk \"$dir\\Code.exe\" \"$desktop\\VS Code.lnk\"",
        "clean_redundant_files @(\"$apps_lnk\\Visual Studio Code\")"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process",
        "remove_files @(\"$desktop\\VS Code.lnk\",\"$user_AppData\\Code\",\"$env:UserProfile\\.vscode\")"
    ],
    "checkver": {
        "url": "https://code.visualstudio.com/sha?build=stable",
        "jsonpath": "$.products[?(@.platform.os == 'win32-x64-archive')].name"
    },
    "autoupdate": {
        "architecture": {
