    "hash": "c643d1b09811798adb45537dc90e7f5e95f4adfadc0de19aabd2084c12e0a8a0",
    "shortcuts": [
        [
            "AppFlowy.exe",
            "AppFlowy"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\_installer_.exe\"",
        "& $path_exe /VerySilent /Dir=$dir",
        "$core_exe=\"$dir\\AppFlowy.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$user_AppData\\io.appflowy\") @(\"$persist_dir\\io.appflowy\")",
        "clean_redundant_files @($path_exe)",
        "remove_app_lnk @(\"AppFlowy.lnk\")"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$user_AppData\\io.appflowy\")",
        "$ui_exe=\"$dir\\unins000.exe\"",
        "try{ & $ui_exe /VerySilent }catch{}",
        "sleep_uninstall $ui_exe"
    ],
    "checkver": {
        "github": "https://github.com/AppFlowy-IO/AppFlowy"
    },
    "autoupdate": {
        "url": "https://github.com/AppFlowy-IO/AppFlowy/releases/download/$version/AppFlowy-$version-windows-x86_64.exe#/_installer_.exe"
    }
}
