{
    "version": "8.0.5",
    "description": "一个先进的待办事项列表应用程序，集成了时间盒和时间跟踪功能。它还集成了 Jira、Gitlab、GitHub 和 Open Project。An advanced todo list app with integrated Timeboxing and time tracking capabilities. It also comes with integrations for Jira, Gitlab, GitHub and Open Project.",
    "homepage": "https://super-productivity.com",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/johannesjo/super-productivity/blob/master/LICENSE"
    },
    "url": "https://github.com/johannesjo/super-productivity/releases/download/v8.0.5/superProductivity-Setup-8.0.5.exe#/_installer_.exe",
    "hash": "sha512:e0dcdce2db7274af6304fe84808b2a6708bf6bcf01ee3ae3e25546a2194fbaaeecac406e2378aaf000ef978a48b4c66d86924ee6e08ab5ea75fdf98cd62d5f83",
    "shortcuts": [
        [
            "superProductivity.exe",
            "SuperProductivity"
        ]
    ],
    "pre_install": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\_installer_.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\superProductivity.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$user_AppData\\superProductivity\") @(\"$persist_dir\\superProductivity\")",
        "clean_redundant_files @($path_exe)",
        "remove_app_lnk @(\"superProductivity.lnk\")"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$user_AppData\\superProductivity\")",
        "$ui_exe=\"$dir\\Uninstall superProductivity.exe\"",
        "try{ & $ui_exe /S }catch{}",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$user_LocalAppData\\superproductivity-updater\")"
    ],
    "checkver": {
        "github": "https://github.com/johannesjo/super-productivity"
    },
    "autoupdate": {
        "url": "https://github.com/johannesjo/super-productivity/releases/download/v$version/superProductivity-Setup-$version.exe#/_installer_.exe",
        "hash": {
            "url": "$baseurl/latest.yml",
            "regex": "sha512:\\s+$base64"
        }
    }
}
