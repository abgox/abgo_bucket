{
    "version": "4.12.0",
    "description": "一款速度快、不打扰、够安全、易于分享的网盘，你可以在这里存储、管理和探索内容，尽情打造丰富的数字世界。A fast, non-intrusive, secure and easy-to-share personal netdisk where you can store, manage and explore things, and build a flourishing digital world.",
    "homepage": "https://www.alipan.com/",
    "license": "Unknown",
    "url": "https://cdn.aliyundrive.net/downloads/apps/desktop/update/4.12.0/win32/ia32/aDrive-4.12.0.exe#/dl.7z",
    "hash": "9a829cc1e6a93ab55f89d79339113e4ab142e3cc30e7bfc9d1edd08d2090bc7c",
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "persist -dir @(\"$env:AppData\\aDrive\") @(\"$persist_dir\\aDrive\")",
        "create_app_lnk \"$dir\\aDrive.exe\" \"$desktop\\阿里云盘.lnk\"",
        "create_app_lnk \"$dir\\aDrive.exe\" \"$scoop_apps_lnk\\阿里云盘.lnk\""
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process",
        "remove_files @(\"$desktop\\阿里云盘.lnk\",\"$scoop_apps_lnk\\阿里云盘.lnk\",\"$env:AppData\\aDrive\")"
    ],
    "checkver": {
        "url": "https://github.com/microsoft/winget-pkgs/commits/master/manifests/a/Alibaba/aDrive",
        "regex": "Alibaba.aDrive version ([\\d\\.]+)"
    },
    "autoupdate": {
        "url": "https://cdn.aliyundrive.net/downloads/apps/desktop/update/$version/win32/ia32/aDrive-$version.exe#/dl.7z"
    }
}
