        }
    },
    "post_install": [
        "$CmdString = \"$dir\\XBYDriver-$version-win-x64.exe /S /D=$dir\"",
        "Invoke-Expression $CmdString",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
          "persist -dir @(\"$env:APPData\\alixby3\") @(\"$persist_dir\")"
    ],
    "pre_uninstall": [
        "$_bucket=(scoop bucket list | where-Object {$_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$_bucket\\bin\\utils.ps1\"",
        "stop_process"
    ],
    "post_uninstall": [
        "$data=@(\"$env:APPData\\alixby3\",\"C:\\ProgramData\\Microsoft\\Windows\\Start Menu\\Programs\\小白羊云盘.lnk\")",
        "$data | ForEach-Object {",
        "   if (Test-Path($_)) {",
        "       Remove-Item -Force -Recurse $_",
        "       Write-Host \"Removing $_\" -f Yellow",
        "   }",
        "}"
    ],
    "checkver": "github",
    "autoupdate": {
        "note": "Thanks for using autoupdate, please test your updates!",
        "url": "https://github.com/gaozhangmin/aliyunpan/releases/download/$version/XBYDriver-$version-win-x64.exe"
    }
