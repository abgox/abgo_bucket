    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\_installer_.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\小白羊云盘.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$env:AppData\\alixby3\") @(\"$persist_dir\\alixby3\")",
        "create_app_lnk $core_exe \"$scoop_apps_lnk\\小白羊云盘.lnk\"",
        "clean_redundant_files @($path_exe,\"$admin_apps_lnk\\小白羊云盘.lnk\") 15"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$env:AppData\\alixby3\")",
        "$ui_exe=\"$dir\\Uninstall 小白羊云盘.exe\"",
        "& $ui_exe /S",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$scoop_apps_lnk\\小白羊云盘.lnk\",\"$env:LocalAppData\\xbyyunpan-updater\")"
    ],
    "checkver": "github",
