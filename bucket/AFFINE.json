    "hash": "5185755d7e913aa14cb1f80d50f46dfd81f555dffb5f874f41d1ae71dec58320",
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$filter=Get-ChildItem $dir | Where-Object {$_.Name -like \"*.nupkg\" }",
        "Rename-Item $filter.FullName \"affine.zip\"",
        "Expand-Archive \"$dir\\affine.zip\" \"$dir\\temp\"",
        "Copy-Item \"$dir\\temp\\lib\\net45\" \"$dir\\app\" -Recurse -Force",
        "remove_file \"$dir\\temp\"",
        "remove_file \"$dir\\affine.zip\"",
        "persist -dir @(\"$env:AppData\\AFFiNE\") @(\"$persist_dir\\AFFiNE\")",
        "create_app_lnk \"$dir\\app\\AFFiNE.exe\" \"$desktop\\AFFiNE.lnk\"",
        "create_app_lnk \"$dir\\app\\AFFiNE.exe\" \"$scoop_apps_lnk\\AFFiNE.lnk\""
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process",
        "remove_files @(\"$desktop\\AFFiNE.lnk\",\"$scoop_apps_lnk\\AFFiNE.lnk\",\"$env:AppData\\AFFiNE\")"
    ],
    "checkver": {
        "github": "https://github.com/toeverything/AFFiNE"
    },
    "autoupdate": {
        "url": "https://github.com/toeverything/AFFiNE/releases/download/v$version/affine-stable-windows-x64.exe#/_installer_.zip"
    }
}
