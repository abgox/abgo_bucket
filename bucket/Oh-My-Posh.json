    "pre_install": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "persist_file -dir @(\"$user_LocalAppData\\oh-my-posh\") @(\"$persist_dir\\oh-my-posh\")",
        "do_some_things"
