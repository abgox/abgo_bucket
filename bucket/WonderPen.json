    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\_installer_.exe\"",
        "& $path_exe /S /D=$dir",
        "persist -dir @(\"$env:AppData\\WonderPen\") @(\"$persist_dir\\WonderPen\")",
        "create_app_lnk \"$dir\\WonderPen.exe\" \"$desktop\\WonderPen.lnk\"",
        "create_app_lnk \"$dir\\WonderPen.exe\" \"$scoop_apps_lnk\\WonderPen.lnk\"",
        "clean_redundant_files @(\"$apps_lnk\\WonderPen.lnk\",$path_exe) 10"
    ],
    "pre_uninstall": [
        "$ErrorActionPreference=\"SilentlyContinue\"",
        "& \"$dir\\Uninstall WonderPen.exe\" /S",
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process",
        "remove_files @(\"$desktop\\WonderPen.lnk\",\"$scoop_apps_lnk\\WonderPen.lnk\",\"$env:AppData\\WonderPen\",\"$env:LocalAppData\\wonderpen-updater\")"
    ],
    "checkver": {
        "url": "https://www.tominlab.com/blog",
        "regex": "/wonderpen-v-(\\d)-(\\d)-(\\d)",
        "replace": "${1}.${2}.${3}"
    },
    "autoupdate": {
        "architecture": {
