        "persist_file -file @(\"$dir\\settings.json\") @(\"$persist_dir\\settings.json\")",
        "handle_app_lnk",
        "do_some_things"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process",
        "remove_files"
    ],
