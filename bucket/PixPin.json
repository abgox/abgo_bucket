{
    "$schema": "https://abgox.github.io/ScoopType/schema/zh-CN-min.json",
    "version": "1.3.1.0",
    "description": "A powerful screenshot tool. 功能强大使用简单的截图/贴图工具，帮助你提高效率",
    "homepage": "https://pixpinapp.com/",
    "license": "Unknown",
    "url": "https://download.pixpinapp.com/PixPin_1.3.1.0.zip",
    "hash": "bae6de7833ab6fe992560e82d96ad49cb5ddb71fbf35e723b98dbbf07e6561b0",
    "extract_dir": "PixPin",
    "shortcuts": [
        [
            "PixPin.exe",
            "PixPin"
        ]
    ],
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
          "persist -dir @(\"$dir\\Config\") @(\"$persist_dir\\Config\")",
          "explorer \"$dir\\PixPin.exe\""
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process"
    ],
    "checkver": {
        "regex": "PixPin_([\\d.]+)\\."
    },
    "autoupdate": {
        "url": "https://download.pixpinapp.com/PixPin_$version.zip"
    }
}
