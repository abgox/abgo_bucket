            "hash": "602bf44b87ce81fd299337ef4b2e9d4c6d9aa6e3eb65bd7d72ab2ae5e12335c0"
        },
        "32bit": {
            "url": "https://github.com/jgraph/drawio-desktop/releases/download/v24.6.1/draw.io-ia32-24.6.1-windows-32bit-installer.exe#/abgo_bucket_installer.exe",
