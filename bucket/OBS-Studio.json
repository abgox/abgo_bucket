    "url": "https://cdn-fastly.obsproject.com/downloads/OBS-Studio-30.1.2-Full-Installer-x64.exe#/_installer_.exe",
    "hash": "0626384e8aa11211e77f11cc068cfedd0af043ebc71304ad7f8092173632121d",
    "shortcuts": [
        [
            "bin\\64bit\\obs64.exe",
            "OBS Studio"
        ]
    ],
    "pre_install": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe= \"$dir\\_installer_.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\uninstall.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$user_AppData\\obs-studio\") @(\"$persist_dir\\obs-studio\")",
        "clean_redundant_files @($path_exe)",
        "remove_app_lnk @(\"OBS Studio.lnk\") @(\"OBS Studio\")"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$user_AppData\\obs-studio\")",
        "$ui_exe=\"$dir\\uninstall.exe\"",
        "try{ & $ui_exe /S }catch{}",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$user_LocalAppData\\obs-studio-updater\")"
    ],
    "checkver": {
        "github": "https://github.com/obsproject/obs-studio"
    },
    "autoupdate": {
        "url": "https://cdn-fastly.obsproject.com/downloads/OBS-Studio-$version-Full-Installer-x64.exe#/_installer_.exe"
    }
}
