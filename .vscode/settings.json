{
    "json.schemas": [
        {
            "url": "https://abgox.github.io/schema/Scoop/zh-CN/manifest-min.json",
            "fileMatch": [
                "bucket/**/*.json",
                "deprecated/**/*.json"
            ]
        }
    ],
    "editor.formatOnSave": true,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "filename-lint.enabled": true,
    "filename-lint.ignorePatterns": [
        "**/node_modules/**",
        "**/.git/**",
        "**/.idea/**",
        "**/bucket/*.json",
        "**/deprecated/*.json",
        "**/bin/*.exe",
        "**/bin/lang/*.json",
        "**/schedule/*.ps1"
    ]
}
